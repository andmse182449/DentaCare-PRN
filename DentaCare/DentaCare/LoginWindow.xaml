<Window x:Class="DentaCare.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentaCare"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="emailBx" HorizontalAlignment="Left" Margin="330,176,0,0" TextWrapping="WrapWithOverflow" Text="" VerticalAlignment="Top" Width="120" Height="17"/>
        <PasswordBox x:Name="passwordBx" HorizontalAlignment="Left" Margin="330,230,0,0" PasswordChar="*" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginBtn" IsDefault="True" Content="Login" HorizontalAlignment="Left" Margin="370,290,0,0" VerticalAlignment="Top" Click="LoginBtn_Click"/>
        <Label Content="Sign in" HorizontalAlignment="Left" Margin="367,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="324,145,0,0" VerticalAlignment="Top"/>
        <Label Content="Pasword" HorizontalAlignment="Left" Margin="324,199,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
